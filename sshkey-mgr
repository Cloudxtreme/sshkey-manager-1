#!/bin/bash
mgr_dir=`cd $(dirname $0);pwd`
key_dir="$mgr_dir/sshkey"


source $mgr_dir/lib.sh


function Usage() {
    echo "$0 { gen <name> | list | deploy <name> | restore <name> | upload <name> <path> | update <path>}"
    exit 1
}

function List() {
    cd $key_dir/
    number=`ls -d */ | wc -l`
    echo "Totle:" $number
    for key in `ls -d */`
    do
        tree $key
    done
}

function Generate_key() {
    name="$1"
    mkdir -p $key_dir/$name
    ssh-keygen -t rsa -f $key_dir/$name/$name
    
    # generate ssh configuration
    cp $key_dir/config_tem $key_dir/$name/config
    sed -i "s/NAME/$name/g" $key_dir/$name/config
    read -p "User name: " user
    sed -i "s/USER/$user/g" $key_dir/$name/config
    read -p "server ip: " ip
    sed -i "s/IP/$ip/g" $key_dir/$name/config
    sed -i "s+PATH+$key_dir/$name/$name+g" $key_dir/$name/config
}

function Deploy() {
    name="$1"
    ip=`cat $key_dir/$name/config | grep Hostname | awk -F " " '{print $2}'`

    # authority whether host exists
    cat ~/.ssh/config | grep "Host $name" && \
    echo "The machine ( $name ) is already exist. " && \
    exit 1

    # add config to ~/.ssh/config
    cat $key_dir/$name/config >> ~/.ssh/config
    
    # scp pub key to server
    ssh-keygen -f "/home/develop_pan/.ssh/known_hosts" -R $name
    ssh-copy-id -i $key_dir/$name/$name $name
}

function Upload() {
    key_name="$1"
    direction="$2"
    if [ ! -d $key_dir/$key_name ];then
        echo "No such key!"
        exit 1
    fi
    scp -r $key_dir/$key_name $direction
}

function Update() {
    direction="$1"
    host="$(cut -d':' -f1 <<< $direction)"
    path="$(cut -d':' -f2 <<< $direction)"
    
    scp -r $direction/* $key_dir/
}

case "$1" in 
    gen)
        Parameter_judge 2 $#
        Generate_key $2
        ;;

    deploy)
        Parameter_judge 2 $#
        Deploy $2
        ;;

    restore)
        Parameter_judge 2 $#
        echo delete $2
        ;;

    list )
        Parameter_judge 1 $#
        List
        ;;

    upload)
        Parameter_judge 3 $#
        Upload $2 $3
        ;;

    update)
        Parameter_judge 2 $#
        Update $2
        ;;

    *)
        Usage
        ;;
esac



